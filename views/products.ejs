<!DOCTYPE html>
<html lang="en">
<head>
  <title>Items</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      min-height: 100vh;
    }
    .container {
      background-image: url('/showroom.jpg');
      background-size: cover;
      width: 100%;
      padding: 20px;
    }
    h1 {
      text-align: center;
      backdrop-filter: blur(12px);
      color: black;
      margin-bottom: 20px;
    }
    .add-item {
      text-align: right;
      margin-bottom: 20px;
    }
    .items-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }
    .item-card {
      background: transparent;
      backdrop-filter: blur(8px);
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      text-align: center;
    }
    .item-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 10px;
    }
    .item-card h3 {
      margin: 10px 0;
      font-size: 1.2em;
      color: whitesmoke;
    }
    .item-card p {
      margin: 5px 0;
      color: whitesmoke;
    }
    .item-card .price {
      font-weight: bold;
      margin-bottom: 10px;
    }
    .actions, .details-btn {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
      gap: 10px;
    }
    .details-btn button {
      background: transparent;
      border: 1px solid black;
      color: #ffffff;
      padding: 5px 40px;
      border-radius: 3px;
      margin-left: 35px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .details-btn button:hover {
      background-color: grey;
    }
    .actions a {
      text-decoration: none;
      font-size: 0.9em;
    }
    .actions form {
      display: inline;
    }
    .actions button {
      background-color: #dc3545;
      color: #ffffff;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .actions button:hover {
      background-color: #c82333;
    }
    .item-details {
      display: none;
      text-align: left;
      margin-top: 10px;
      background: transparent;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ddd;
      color: whitesmoke;
    }
    .checkout-btn {
      display: block;
      margin: 20px auto;
      width: 200px;
      text-align: center;
      background-color: black;
      color: #ffffff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 1em;
      cursor: pointer;
      transition: background-color 0.3s;
      text-decoration: none;
    }
    .checkout-btn:hover {
      background-color: grey;
    }
  </style>
  <script>
    function toggleDetails(id) {
      const details = document.getElementById(id);
      details.style.display = details.style.display === 'none' || details.style.display === '' ? 'block' : 'none';
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>All Items</h1>
    <div class="add-item">
      <a href="/products"></a>
    </div>
    <div class="items-grid">
      <% items.forEach((item, index) => { %>
        <div class="item-card">
          <img src="<%= item.image %>" alt="<%= item.name %> Image">
          <h3><%= item.name %></h3>
          <p class="price"><%= item.price %></p>
          <p>Quantity: <strong><%= item.quantity %></strong></p>
          <div class="details-btn">
            <button onclick="toggleDetails('details-<%= index %>')">View Details</button>
          </div>
          <div id="details-<%= index %>" class="item-details">
            <p><%= item.description %></p>
          </div>
        <!-- Checkout Button -->
        <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
        </div>
        
      <% }) %>
    
</body>
</html>
